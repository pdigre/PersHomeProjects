<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         id="no.esito.genova.ptm"
         name="Genova PTM Driver"
         point="no.esito.genova.driver">
      <generator
            class="no.esito.genova.io.driver.PTM_Driver"
            description="XTEND Template Engine"
            name="XTEND">
      </generator>

   </extension>
<extension
      id="no.esito.genova.ptm.breakpointmarker"
      name="PTM BreakpointMarker"
      point="org.eclipse.core.resources.markers">
	<super type="org.eclipse.debug.core.lineBreakpointMarker"/>
</extension>
<extension point = "org.eclipse.debug.ui.debugModelPresentations"> 
         <debugModelPresentation
             class = "no.esito.genova.io.debug.PTMModelPresentation"
             id = "no.esito.genova.debug.PTM_Model"
             detailsViewerConfiguration = "no.esito.genova.io.debug.PTMDetailsViewerConfiguration">
          </debugModelPresentation> 
</extension>
<extension
      point="org.eclipse.debug.core.breakpoints">
   <breakpoint
         class="no.esito.genova.io.debug.PTM_Breakpoint"
         id="no.esito.genova.ptm.breakpoint"
         markerType="no.esito.genova.ptm.breakpointmarker"
         name="Genova PTM Breakpoint">
   </breakpoint>
</extension>
<extension
      point="org.eclipse.core.runtime.adapters">
   <factory
    class="no.esito.genova.io.debug.PTMBreakpointAdapterFactory"
       adaptableType="org.eclipse.ui.texteditor.ITextEditor">
       <adapter type="org.eclipse.debug.ui.actions.IToggleBreakpointsTarget"/>
    </factory>
</extension>
<extension
      point="org.eclipse.ui.actionSets">
   <actionSet
         id="no.esito.genova.actionSet.xtend"
         label="Genova"
         visible="true">
      <action
            class="no.esito.genova.io.xtend.CreateXtendAction"
            icon="src/main/resources/icons/Build.png"
            id="no.esito.genova.action.xtend"
            label="TMPL -&gt; Xtend"
            menubarPath="project/projEnd"
            tooltip="Create Xtend equivalent template files from TMPL">
      </action>
   </actionSet>
</extension>

</plugin>
